// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Py310-general",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/python:1-3.10-bullseye",

  // Features to add to the dev container. More info: https://containers.dev/features.
	"features": {
		"ghcr.io/devcontainers-contrib/features/coverage-py:2": {},
        "ghcr.io/devcontainers/features/python:1": {},
		"ghcr.io/devcontainers/features/conda:1": {},
        "ghcr.io/devcontainers-contrib/features/bash-command:1": {}
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
    "postCreateCommand": "git maintenance start; git config --global column.ui auto; git config --global branch.sort -committerdate ; git config --global fetch-writeCommitGraph true ; git config --global core.untrackedcache true; git config --global core.fsmonitor true ; conda install -y psycopg2",

	// Configure tool-specific properties.
    "customizations": {
		// Configure properties specific to VS Code.
		"vscode": {
            // VSCode settings
            "settings": {
                "workbench.colorTheme": "Default Dark Modern",
                "workbench.startupEditor": "none",
                "python.linting.enabled": true,
				"python.linting.pylintEnabled": true,
                "security.workspace.trust.untrustedFiles": "open",
                "editor.cursorStyle": "block",
                "editor.minimap.enabled": false,
                "editor.rulers": [
                    80,
                    120
                ],
                "editor.copyWithSyntaxHighlighting": false,
                "terminal.integrated.copyOnSelection": true,
                "editor.emptySelectionClipboard": false,
                "editor.acceptSuggestionOnEnter": "off",
                "editor.inlineSuggest.showToolbar": "always",
                "remote.SSH.localServerDownload": "always",
                "telemetry.telemetryLevel": "off",
                "gitlens.telemetry.enabled": false,
                "workbench.enableExperiments": false,
                "workbench.settings.enableNaturalLanguageSearch": true,
                "files.watcherExclude": {
                    "**/.git/objects/**": true,
                    "**/.git/subtree-cache/**": true,
                    "**/node_modules/*/**": true,
                    "**/.hg/store/**": true,
                    "**/.cache/**":true,
                    "**/.config/**":true
                } ,
                "git.enabled": true,
                "git.autofetch": true,
                "security.workspace.trust.banner": "never"
            },
		    // Add the IDs of extensions you want installed when the container is created.
		    "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-toolsai.jupyter",
                "yzhang.markdown-all-in-one",
                "VisualStudioExptTeam.vscodeintellicode",
                "eamodio.gitlens",
                "ms-toolsai.jupyter-keymap",
                "ms-python.debugpy"
            ]
        }
    },

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root",

	"shutdownAction": "stopContainer"
}
